@model List<SystemReportMVC.Models.Menu>
@{ Layout = null; }
<nav id="stacked-menu" class="stacked-menu stacked-menu-has-compact stacked-menu-has-hoverable">
    <ul class="menu">
        @foreach (var item in Model)
        {
            if (item.MenuCons.Count() > 0)
            {
<li class="menu-item has-child">
    <a href="javascript:void(0)" class="menu-link"><span class="menu-icon @item.Icon"></span> <span class="menu-text">@item.Ten</span></a>
    <ul class="menu">
        @foreach (var chil in item.MenuCons)
        {
<li class="menu-item">
    <a href="@chil.Path" class="menu-link">@chil.Ten</a>
</li>
}
    </ul>
</li>
 }
                else
                {
<li class="menu-item">
    <a href="@item.Path" class="menu-link"><span class="menu-icon @item.Icon"></span> <span class="menu-text">@item.Ten</span></a>
</li>
}
}
    </ul>
</nav>
